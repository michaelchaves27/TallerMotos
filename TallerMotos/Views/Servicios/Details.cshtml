@model TallerMotos.Application.DTO.ServiciosDTO

@{
    ViewData["Title"] = "Detalle";

}

<h1>Detalle</h1>

<div>
    <h4>Servicios</h4>
    <hr />
    <div class="card flex-row text-right" style="width:60%; margin:0 auto;">
        <img style="max-height:273px;"
             role="img"
        <img src="~/imagenes/logoMoto.jpeg" alt="Logo de la empresa">

        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Descripcion):</b>  @Html.DisplayFor(model => model.Descripcion)</p>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Precio):</b>  ₡ @Html.DisplayFor(model => model.Precio)</p>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Tiempo):</b>  @Html.DisplayFor(model => model.Tiempo) hora</p>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Cilindrada):</b>  @Html.DisplayFor(model => model.Cilindrada)</p>

        </div>
        <div class="d-flex align-items-end">
            <a class="btn btn-primary" asp-action="Index">Regresar al listado</a>
        </div>
    </div>

</div>
<div>
</div>
