@model TallerMotos.Application.DTO.SucursalesDTO

@{
    ViewData["Title"] = "Detalle";

}

<h1>Detalle</h1>

<div>
    <h4>Sucursales</h4>
    <hr />
    <div class="card flex-row text-right" style="width:60%; margin:0 auto;">
        <img style="max-height:273px;"
             role="img"
        <img src="~/imagenes/logoMoto.jpeg" alt="Logo de la empresa">

        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(model => model.Nombre)</h5>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Descripcion):</b>  @Html.DisplayFor(model => model.Descripcion)</p>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Telefono):</b>   @Html.DisplayFor(model => model.Telefono)</p>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Direccion):</b>  @Html.DisplayFor(model => model.Direccion)</p>
            <p class="card-text"><b>@Html.DisplayNameFor(model => model.Correo):</b>  @Html.DisplayFor(model => model.Correo)</p>

        </div>
        <div class="d-flex align-items-end">
            <a class="btn btn-primary" asp-action="TablaSucursales">Regresar</a>
        </div>
    </div>

</div>
<div>
</div>
